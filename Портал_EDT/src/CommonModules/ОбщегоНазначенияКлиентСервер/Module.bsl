// Переносит данные из КоллекцииИсточник в КоллекциюПриемник и формирует ПредставлениеКоллекции
// Используется для хранения объемных реквизитов на форме
//
// Параметры:
//  КоллекцияПриемник		 - Список значений 
//  ПредставлениеКоллекции	 - Строка - реквизит формы, в котором отображается представление коллекции 
//  КоллекцияИсточник		 - Список значений, Массив
//
Процедура ОбработатьКоллекциюРеквизитов(КоллекцияПриемник = Неопределено, ПредставлениеКоллекции = Неопределено, КоллекцияИсточник = Неопределено) Экспорт
     
    Если (КоллекцияИсточник = Неопределено) Тогда
         
        Если (КоллекцияПриемник <> Неопределено) Тогда
            КоллекцияПриемник.Очистить();
        КонецЕсли;
         
        Если (ПредставлениеКоллекции <> Неопределено) Тогда
            ПредставлениеКоллекции = "";
        КонецЕсли;
         
    Иначе
         
        Если (КоллекцияПриемник <> Неопределено) Тогда
            ВремКоллекцияПриемник = КоллекцияПриемник;
        Иначе
            ВремКоллекцияПриемник = Новый СписокЗначений();
        КонецЕсли;
         
        Если ТипЗнч(КоллекцияИсточник) = Тип("Массив") Тогда
            ВремКоллекцияПриемник.ЗагрузитьЗначения(КоллекцияИсточник);
        ИначеЕсли ТипЗнч(КоллекцияИсточник) = Тип("СписокЗначений") Тогда
            ВремКоллекцияПриемник.ЗагрузитьЗначения(КоллекцияИсточник.ВыгрузитьЗначения());
        Иначе
            ВремКоллекцияПриемник.Добавить(КоллекцияИсточник);
        КонецЕсли;
         
        Если (ПредставлениеКоллекции <> Неопределено) Тогда
            ПредставлениеКоллекции = Строка(ВремКоллекцияПриемник);
        КонецЕсли;
 
    КонецЕсли;
         
КонецПроцедуры

